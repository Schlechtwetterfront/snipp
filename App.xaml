<Application x:Class="clipman.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:clipman"
             xmlns:properties="clr-namespace:clipman.Properties"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <properties:Settings x:Key="Settings"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Shared.xaml"/>
                <ResourceDictionary Source="Resources\BurgerButton.xaml"/>
                <ResourceDictionary Source="Resources\Buttons.xaml"/>
                <ResourceDictionary Source="Resources\ClipList.xaml"/>
                <ResourceDictionary Source="Resources\SearchBox.xaml"/>
                <ResourceDictionary Source="Resources\SettingsPanel.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
