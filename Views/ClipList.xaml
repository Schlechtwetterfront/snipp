<UserControl x:Class="clipman.Views.ClipList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:clipman.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ListBox x:Name="clipList" Grid.Row="1" Margin="5,5,5,5" ItemsSource="{Binding Path=ClipView}" BorderThickness="0">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.ColumnSpan="4" FontWeight="Bold" FontSize="16" Content="{Binding Title}"/>
                    <Label FontWeight="Bold" Grid.Row="1">Created</Label>
                    <Label x:Name="created" Grid.Row="1" Grid.Column="1" Content="{Binding Created, StringFormat=d}"/>
                    <Label FontWeight="Bold" Grid.Row="1" Grid.Column="2">Source:</Label>
                    <Label x:Name="source" Grid.Row="1" Grid.Column="3">...</Label>
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
