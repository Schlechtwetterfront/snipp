<UserControl x:Class="clipman.Views.SettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:clipman.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="420"
             x:Name="settingsPanel">
    <UserControl.Resources>
        <SolidColorBrush x:Key="TitleText" Color="Black"/>
        <SolidColorBrush x:Key="Text" Color="#FF666666"/>
    </UserControl.Resources>
    <Border Background="White" BorderBrush="DarkGray" RenderTransformOrigin="1,0">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock FontFamily="Segoe UI Light" FontSize="24" Margin="0,0,0,10">ClipMan</TextBlock>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="150" />
                    <ColumnDefinition Width="62" />
                    <ColumnDefinition Width="62" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label Content="Copy clip" Grid.Row="0" VerticalAlignment="Center"/>
                <TextBox Text="Double-click" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                         Margin="5" VerticalAlignment="Center"
                         Padding="5" IsEnabled="False"/>

                <Label Content="Copy selected clip" Grid.Row="1" VerticalAlignment="Center"/>
                <TextBox Text="Enter" Grid.Row="1" Grid.Column="1"
                         Margin="5" VerticalAlignment="Center"
                         Padding="5" IsEnabled="False"/>
                <TextBox Text="Ctrl+C" Grid.Row="1" Grid.Column="2"
                         Margin="5" VerticalAlignment="Center"
                         Padding="5" IsEnabled="False"/>

                <Label Content="Pin selected clip" Grid.Row="2" VerticalAlignment="Center"/>
                <TextBox Text="Ctrl+P" Grid.Row="2" Grid.Column="2"
                         Margin="5" VerticalAlignment="Center"
                         Padding="5" IsEnabled="False"/>

                <Label Content="Delete selected clip" Grid.Row="3" VerticalAlignment="Center"/>
                <TextBox Text="Delete" Grid.Row="3" Grid.Column="2"
                         Margin="5" VerticalAlignment="Center"
                         Padding="5" IsEnabled="False"/>

                <Label Content="Focus search bar" Grid.Row="4" VerticalAlignment="Center"/>
                <TextBox Text="Ctrl+F" Grid.Row="4" Grid.Column="2"
                         Margin="5" VerticalAlignment="Center"
                         Padding="5" IsEnabled="False"/>

                <Label Content="Focus and clear search bar" Grid.Row="5" VerticalAlignment="Center"/>
                <TextBox Text="Escape" Grid.Row="5" Grid.Column="2"
                         Margin="5" VerticalAlignment="Center"
                         Padding="5" IsEnabled="False"/>

                <Label Content="Bring window to front (global)"
                       Grid.Row="6" VerticalAlignment="Center"/>
                <TextBox Text="Ctrl+`" Grid.Row="6" Grid.Column="2"
                         Margin="5" VerticalAlignment="Center"
                         Padding="5" IsEnabled="False"/>

                <Label Content="Quit"
                       Grid.Row="7" VerticalAlignment="Center"/>
                <TextBox Text="Ctrl+Q" Grid.Row="7" Grid.Column="2"
                         Margin="5" VerticalAlignment="Center"
                         Padding="5" IsEnabled="False"/>
            </Grid>
            <TextBlock Grid.Row="3" FontSize="20" Foreground="{DynamicResource Text}" FontFamily="Segoe UI Light">
                v0.1.0
            </TextBlock>
        </Grid>
    </Border>
</UserControl>
